{
  "name": "ts-jest",
  "jest": {
    "verbose": true,
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "version": "1.0.0",
  "main": "index.js",
  "author": "takeo asai",
  "license": "MIT",
  "scripts": {
    "start": "node dist/bundle.js",
    "clean": "rm -rf ./node_modules ./dist",
    "build": "webpack --colors",
    "test": "jest --colors --runInBand"
},
  "devDependencies": {
    "@types/jest": "^21.1.8",
    "@types/node": "^8.0.58",
    "@types/webpack": "^3.8.1",
    "jest": "^21.2.1",
    "ts-jest": "^21.2.4",
    "ts-loader": "^3.2.0",
    "ts-node": "^4.0.1",
    "tslint": "^5.8.0",
    "tslint-loader": "^3.5.3",
    "typescript": "^2.6.2",
    "webpack": "^3.10.0"
  }
}
